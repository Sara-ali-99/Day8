@{
    int i = 1;
}

<h1>Employees</h1>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@emp.FirstName @emp.MiddleName @emp.LastName</td>
                <td><a href="/Employee/GetById/@emp.SSN">Details</a></td>
                <td><a href="/Employee/delete/@emp.SSN">Delete</a></td>
            </tr>           
        }
    </tbody>
</table>

<a href="/Employee/Add">Add</a>
